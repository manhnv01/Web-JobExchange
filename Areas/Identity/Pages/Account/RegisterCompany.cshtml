@page "/Company/Register"
@model RegisterCompanyModel
@{
    ViewData["Title"] = "Register Company";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}
<div class="wrap-auth-section">
    <div class="auth row">
        <div class="auth-form" style="width: 850px;">
            <div class="header">
                <div class="logo">
                    <a href="#">
                        <img src="~/images/logo/Logo_ABCG07_OK.png">
                    </a>
                </div>
                <h2 class="title">Đăng ký tài khoản Nhà tuyển dụng</h2>
                <div class="text-muted caption">
                    Cùng tạo dựng lợi thế cho doanh nghiệp bằng trải nghiệm công nghệ tuyển dụng ứng dụng sâu AI & Hiring Funnel.
                </div>
            </div>
            <div class="register">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-24">
                        <label asp-for="Input.Email" class="mb-8">Email <span class="text-danger"> *</span></label>
                        <div class="input-group ">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                            </div>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Nhập email"
                                   aria-label="Nhập email">
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-24">
                        <label asp-for="Input.Password" class="mb-8">Mật khẩu <span class="text-danger"> *</span></label>
                        <div class="input-group ">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-solid fa-shield-keyhole"></i></span>
                            </div>
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true"
                                   placeholder="Nhập mật khẩu" aria-label="Nhập mật khẩu">
                            <div class="input-group-prepend">
                                <button type="button" tabindex="-1" data-input-target="#password"
                                        class="input-group-text toggle-password"></button>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-24">
                        <label asp-for="Input.ConfirmPassword" class="mb-8">Xác nhận mật khẩu <span class="text-danger"> *</span></label>
                        <div class="input-group ">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-solid fa-shield-keyhole"></i></span>
                            </div>
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Nhập lại mật khẩu" aria-label="Nhập lại mật khẩu">
                            <div class="input-group-prepend">
                                <button type="button" tabindex="-1" data-input-target="#password_confirmation"
                                        class="input-group-text toggle-password"></button>
                            </div>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-24">
                                <label asp-for="Input.AccountName" class="mb-8">Họ và tên <span class="text-danger"> *</span></label>
                                <div class="input-group ">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                                    </div>
                                    <input asp-for="Input.AccountName" class="form-control" placeholder="Nhập họ tên đầy đủ"
                                           aria-label="Nhập họ tên" aria-required="true">
                                </div>
                                <span asp-validation-for="Input.AccountName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-24">
                                <label asp-for="Input.Phone" class="mb-8">Số điện thoại <span class="text-danger"> *</span></label>
                                <div class="input-group ">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa-solid fa-phone"></i></i></span>
                                    </div>
                                    <input asp-for="Input.Phone" class="form-control" placeholder="Nhập số điện thoại"
                                           aria-label="Nhập họ tên" aria-required="true">
                                </div>
                                <span asp-validation-for="Input.Phone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-24">
                                <label asp-for="Input.CompanyName" class="mb-8">Công ty <span class="text-danger"> *</span></label>
                                <div class="input-group ">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa-solid fa-buildings"></i></span>
                                    </div>
                                    <input asp-for="Input.CompanyName" class="form-control" placeholder="Nhập tên công ty"
                                           aria-label="Nhập họ tên" aria-required="true">
                                </div>
                                <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-24">
                                <label asp-for="Input.IndustryId" class="mb-8">Lĩnh vực <span class="text-danger"> *</span></label>
                                <div class="input-group ">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa-solid fa-industry"></i></span>
                                    </div>
                                    <select asp-for="Input.IndustryId" class="form-control" asp-items="ViewBag.IndustryId">
                                        <option value="0">-- Chọn lĩnh vực --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Input.IndustryId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-24">
                        <label asp-for="Input.Address" class="mb-8">Địa chỉ <span class="text-danger"> *</span></label>
                        <div class="input-group ">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-sharp fa-solid fa-location-dot"></i></span>
                            </div>
                            <input asp-for="Input.Address" class="form-control" placeholder="Ví dụ: Số xx Ngõ xx Định Công, Hoàng Mai, Hà Nội"
                                   aria-label="Nhập họ tên" aria-required="true">
                        </div>
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mt-3">
                        <button id="registerSubmit" type="submit"
                                class="btn btn-sign input-block-level w-100 h-40 mb-24 btn-primary-hover g-recaptcha">
                            Đăng ký
                        </button>
                    </div>
                </form>
                <div class="mt-3 d-flex justify-content-center option-auth text-center wrap-redirect-login">
                    <span>
                        Bạn đã có tài khoản?<a class="text-success" id="login" asp-area="Identity" asp-page="/Account/Login">
                            Đăng nhập ngay
                        </a>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
<p class="auth-copy-right">© 2023-2023 Job Exchange ABCG07.</p>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }