@page "/ResetPasswordConfirmation"
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="wrap-auth-section">
    <div class="auth row">
        <div class="auth-form">
            <div class="header">
                <div class="logo">
                    <a href="#">
                        <img src="~/images/logo/Logo_ABCG07_OK.png">
                    </a>
                </div>
                <h2 class="title">Xác nhận đặt lại mật khẩu</h2>
                <div class="text-muted caption">
                    <p>
                        Mật khẩu của bạn đã được thay đổi thành công. <a asp-page="./Login" style="color: #0db14b">Nhấn vào đây để đăng nhập</a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
