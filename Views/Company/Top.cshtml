@model List<Company>
@{
    ViewData["Title"] = "Company Page";
}
<div class="company">
    <div class="box-search-company">
        <div class="container d-flex">
            <div class="box-search">
                <ul class="nav header">
                    <li class="nav-item">
                        <a asp-controller="Company" asp-action="Index" class="nav-link">Danh sách công ty</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Company" asp-action="Top" class="nav-link active">Top công ty</a>
                    </li>
                </ul>
                <div class="caption">
                    <h1 class="title">Khám phá 100.000+ công ty nổi bật</h1>
                    <p class="description">Tra cứu thông tin công ty và tìm kiếm nơi làm việc tốt nhất dành cho
                        bạn</p>
                </div>
                <form action="Search" class="form-search border-hover" method="GET">
                    <i class="fa-light fa-magnifying-glass"></i>
                    <input class="form-control" placeholder="Nhập tên công ty" id="keyword" name="name">
                    <button class="btn btn-search btn-search-company btn-primary-hover">
                        Tìm kiếm
                    </button>
                </form>
            </div>
            <div class="box-img">
                <img src="v4/image/brand-identity/company-billBoarde209.png?v=1.0.0" class="" alt=""
                    style="width: 272px !important;">
            </div>
        </div>  
    </div>
    <div class="featured-companies">
        <div class="company-header text-center">
            <h2 class="title">DANH SÁCH CÁC TOP CÔNG TY</h2>
        </div>
        <div class="container">
            <div class="row">
                    @foreach (var company in Model)
                    {
                        <div class="col-md-4 col-sm-6">
                            <div class="box-company item-hover">
                                <div class="company-banner">
                                    <a asp-controller="Company" asp-action="Detail" asp-route-id="@company.CompanyId">
                                        <div class="cover-wraper">
                                            <img src="~/@company.CoverImage"
                                                alt="@company.CompanyName" class="img-fluid">
                                        </div>
                                    </a>
                                    <div class="company-logo">
                                        <a asp-controller="Company" asp-action="Detail" asp-route-id="@company.CompanyId">
                                            <img class="img-fluid"
                                                src="~/@company.Avatar"
                                                alt="TỔ CHỨC GIÁO DỤC FPT">
                                        </a>
                                    </div>
                                </div>
                                <div class="company-info">
                                    <h3>
                                        <a asp-controller="Company" asp-action="Detail" asp-route-id="@company.CompanyId" class="company-name"
                                            target="_blank">@company.CompanyName</a>
                                    </h3>
                                    <div class="company-description">
                                        <p>" @company.Introduce"</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
            </div>
        </div>
    </div>
</div>